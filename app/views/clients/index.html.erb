<div class="page-header">
  <%= link_to new_client_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Client
  <% end %>
  <h1>Listing clients</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Corporate name</th>
            <th>Cnpj</th>
            <th>Phone</th>
            <th>Address</th>
            <th>District</th>
            <th>City</th>
            <th>Email</th>
            <th>Best hours</th>
            <th>Delivery hours</th>
            <th>Receipt</th>
            <th>Local</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @clients) do |client| %>
            <td><%= client.name %></td>
            <td><%= client.corporate_name %></td>
            <td><%= client.cnpj %></td>
            <td><%= client.phone %></td>
            <td><%= client.address %></td>
            <td><%= client.district %></td>
            <td><%= client.city %></td>
            <td><%= client.email %></td>
            <td><%= client.best_hours %></td>
            <td><%= client.delivery_hours %></td>
            <td><%= client.receipt %></td>
            <td><a target="_blank" href="<%= "https://maps.google.com/?q=#{client.lat},#{client.lng}" %>">Maps</a></td>
            <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
