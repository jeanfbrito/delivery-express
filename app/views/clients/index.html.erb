<div class="page-header">
  <%= link_to new_client_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Client
  <% end %>
  <h1>Listing clients</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <tbody class="col-md-12" style="padding:0px;">
      <%= content_tag_for(:tr, @clients) do |client| %>
        <tr>
          <td class="col-sm-2">
              <img src="<%= url_for(client.front_picture) if client.front_picture.attached? %>" alt="..." class="img-responsive" style="max-height:123px;">
          </td>
          <td class="col-md-4">
              <h4>
                <b><%= client.name %></b>
              </h4>
              <b> Razão Social: </b>
                <%= client.corporate_name %>
              <br>
              <b> CNPJ: </b>
                <%= client.cnpj %>
              <br>
              <b> Endereço: </b>
                <%= client.address %>
              <br>
              <b> Bairro: </b>
                <%= client.district %>
              <b> Cidade: </b>
                <%= client.city %>
              <a target="_blank" href="<%= "https://maps.google.com/?q=#{client.lat},#{client.lng}" %>">Maps</a>
          </td>
          <td class="col-md-4">
            <br>
            <b> Telefone: </b>
              <%= client.phone %>
            <br>
            <b> Email: </b>
              <%= client.email %>
            <br>
            <b> Horário para entregas: </b>
              <%= client.delivery_hours %>
            <br>
            <b> Melhor horário para entrega: </b>
              <%= client.best_hours %>
            <br>
            <b> Nota Fiscal?: </b>
              <%= client.receipt %>
            <br>
          </td>
          <td class="col-md-1 text-center">                
              <%= link_to 'Abrir cliente', client, class: "btn btn-primary", style:"margin-top: 5px;" %>
              <%= link_to '<i class="fa fa-edit"></i> Editar'.html_safe, edit_client_path(client), class: "btn btn-default", style:"margin-top: 5px;" %>
              <%= link_to 'Apagar', client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style:"margin-top: 5px;" %>             
          </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
