<%= simple_form_for(@client, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @client.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h4>

      <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :corporate_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :corporate_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cnpj, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cnpj, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :district, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :district, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :best_hours, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :best_hours, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :delivery_hours, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :delivery_hours, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :receipt, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :receipt, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gstreet_link, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :gstreet_link, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :front_picture, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :front_picture, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :delivery_entry_picture, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :delivery_entry_picture, class: "form-control" %>
    </div>
  </div>
  <div class="col-md-offset-2 col-md-10 text-center">
    <h3>Contacts (add the contacts in the client)</h3>
    <div id="contacts">
      <%= f.simple_fields_for :contacts do |contact| %>
        <%= render 'contact_fields', f: contact %>
      <% end %>
      <div class="links col-md-12">
        <%= link_to_add_association 'Add Contact', f, :contacts, class: 'btn btn-success' %>
      </div>
    </div>
  </div>
  <div class="col-md-offset-2 col-md-10 text-center">
    <h3>Products (add the products for the client)</h3>
    <div id="products">
      <%= f.simple_fields_for :sales do |sale| %>
        <%= render 'sale_fields', f: sale %>
      <% end %>
      <div class="links col-md-12">
        <%= link_to_add_association 'Add Product', f, :sales, class: 'btn btn-success' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
